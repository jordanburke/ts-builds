{
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "outDir": "lib",
    "module": "ESNext",
    "skipLibCheck": true,
    "rootDir": "src",
    "emitDeclarationOnly": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"]
}
