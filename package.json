{
  "name": "ts-builds",
  "version": "2.3.3",
  "description": "Shared TypeScript configuration files for library templates. Provides standardized ESLint, Prettier, Vitest, TypeScript, and build configs.",
  "keywords": [
    "typescript",
    "template",
    "config",
    "eslint",
    "prettier",
    "vitest",
    "tsdown",
    "vite",
    "shared-config"
  ],
  "author": "jordan.burke@gmail.com",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/jordanburke/ts-builds",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jordanburke/ts-builds.git"
  },
  "main": "./prettier-config.cjs",
  "bin": {
    "ts-builds": "dist/cli.js"
  },
  "exports": {
    ".": "./prettier-config.cjs",
    "./prettier": "./prettier-config.cjs",
    "./prettier-ignore": "./.prettierignore",
    "./eslint": "./eslint.config.base.mjs",
    "./eslint-fp": "./eslint.config.fp.mjs",
    "./eslint-functype": "./eslint.config.functype.mjs",
    "./vitest": "./dist/vitest.config.base.js",
    "./tsconfig": "./tsconfig.base.json",
    "./tsdown": "./dist/tsdown.config.base.js",
    "./vite": "./dist/vite.config.base.js",
    "./scripts": "./package-scripts.json",
    "./package.json": "./package.json"
  },
  "files": [
    "prettier-config.cjs",
    ".prettierignore",
    "eslint.config.base.mjs",
    "eslint.config.fp.mjs",
    "eslint.config.functype.mjs",
    "dist",
    "tsconfig.base.json",
    "package-scripts.json",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/node": "~24.10.13",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-functype": "^1.3.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-functype": "^1.4.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "devDependencies": {
    "tsdown": "^0.20.3"
  },
  "peerDependencies": {
    "tsdown": "^0.x",
    "vite": "^7.x"
  },
  "peerDependenciesMeta": {
    "tsdown": {
      "optional": true
    },
    "vite": {
      "optional": true
    }
  },
  "scripts": {
    "bootstrap": "rimraf dist && tsdown",
    "validate": "node dist/cli.js validate",
    "validate:bootstrap": "pnpm bootstrap && pnpm validate",
    "format": "node dist/cli.js format",
    "format:check": "node dist/cli.js format:check",
    "lint": "node dist/cli.js lint",
    "lint:check": "node dist/cli.js lint:check",
    "typecheck": "node dist/cli.js typecheck",
    "test": "node dist/cli.js test",
    "test:watch": "vitest",
    "build": "node dist/cli.js build",
    "dev": "node dist/cli.js dev",
    "prepublishOnly": "pnpm validate:bootstrap"
  },
  "packageManager": "pnpm@10.29.3+sha512.498e1fb4cca5aa06c1dcf2611e6fafc50972ffe7189998c409e90de74566444298ffe43e6cd2acdc775ba1aa7cc5e092a8b7054c811ba8c5770f84693d33d2dc"
}
